#include <stdio.h>
#include <stdlib.h>

int main(void)
{
	int num1 = 0 , num2 = 0, opcion;


	setbuf(stdout,NULL);

	printf("-> Calculadora <-\n\n");
	printf("1 - Ingresar primer operando: (A = X)\n");
	printf("2 - Ingresar segundo operando: (B = X)\n");
	printf("3 - Calcular todas las operaciones\n");
	printf("    a - Calcular la suma (A + B)\n");
	printf("    b - Calcular la resta (A - B)\n");
	printf("    c - Calcular la division (A / B)\n");
	printf("    d - Calcular la multiplicacion (A * B)\n");
	printf("4 - Informar resultados\n");
	printf("5 - Salir\n");

	printf("Ingrese una opcion: ");
	scanf("%d", &opcion);

	switch(opcion)
	{
		case 1:
			printf("Ingrese el primer operando: ");
			scanf("%d", &num1);
			system("cls");
			printf("-> Calculadora <-\n\n");
			printf("1 - Ingresar primer operando: (A = %d)\n", num1);
			printf("2 - Ingresar segundo operando: (B = X)\n");
			printf("3 - Calcular todas las operaciones\n");
			printf("    a - Calcular la suma (%d + B)\n",num1);
			printf("    b - Calcular la resta (%d - B)\n",num1);
			printf("    c - Calcular la division (%d / B)\n",num1);
			printf("    d - Calcular la multiplicacion (%d * B)\n",num1);
			printf("4 - Informar resultados\n");
			printf("5 - Salir\n");

			printf("Ingrese una opcion: ");
			scanf("%d", &opcion);
			break;

		case 2:
			printf("Ingrese el segundo operando: ");
			scanf("%d", &num2);
			system("cls");
			printf("-> Calculadora <-\n\n");
			printf("1 - Ingresar primer operando: (A = %d)\n", num1);
			printf("2 - Ingresar segundo operando: (B = %d)\n", num2);
			printf("3 - Calcular todas las operaciones\n");
			printf("    a - Calcular la suma (%d + %d)\n",num1, num2);
			printf("    b - Calcular la resta (%d - %d)\n",num1, num2);
			printf("    c - Calcular la division (%d / %d)\n",num1, num2);
			printf("    d - Calcular la multiplicacion (%d * %d)\n",num1, num2);
			printf("4 - Informar resultados\n");
			printf("5 - Salir\n");

			printf("Ingrese una opcion: ");
			scanf("%d", &opcion);
			break;
		default:
			break;


	}



	return EXIT_SUCCESS;

}
